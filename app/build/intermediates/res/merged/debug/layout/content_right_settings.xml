<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="aub.hopin.RightSettings"
    tools:showIn="@layout/activity_right_settings">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:id="@+id/right_settings_schedule_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Contact Info"
        android:id="@+id/right_settings_contact_info_button"
        android:layout_below="@+id/right_settings_schedule_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Car Info"
        android:id="@+id/right_settings_car_info_button"
        android:layout_below="@+id/right_settings_contact_info_button"
        android:layout_alignStart="@+id/right_settings_contact_info_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/right_settings_profile_button"
        android:layout_below="@+id/right_settings_car_info_button"
        android:layout_alignEnd="@+id/right_settings_contact_info_button" />

</RelativeLayout>
