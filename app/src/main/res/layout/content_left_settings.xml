<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="aub.hopin.LeftSettings"
    tools:showIn="@layout/activity_left_settings">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Distance Units"
        android:id="@+id/left_settings_distance_units_button"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/left_settings_map_history_button"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:id="@+id/left_settings_notification_button"
        android:layout_below="@+id/left_settings_distance_units_button"
        android:layout_alignStart="@+id/left_settings_distance_units_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Navigation"
        android:id="@+id/left_settings_navigation_button"
        android:layout_below="@+id/left_settings_notification_button"
        android:layout_alignStart="@+id/left_settings_notification_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Map History"
        android:id="@+id/left_settings_map_history_button"
        android:layout_below="@+id/left_settings_navigation_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show Scale On Map"
        android:id="@+id/left_settings_show_scale_on_map_button"
        android:layout_below="@+id/left_settings_map_history_button"
        android:layout_alignStart="@+id/left_settings_map_history_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Terms and Privacy"
        android:id="@+id/left_settings_terms_and_privacy_button"
        android:layout_below="@+id/left_settings_show_scale_on_map_button"
        android:layout_alignStart="@+id/left_settings_show_scale_on_map_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:id="@+id/left_settings_feedback_button"
        android:layout_below="@+id/left_settings_terms_and_privacy_button"
        android:layout_alignStart="@+id/left_settings_terms_and_privacy_button" />
</RelativeLayout>
